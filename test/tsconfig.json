{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./config/tsconfig.base.json",
    "compilerOptions": {
        "lib": ["DOM", "ES2017", "ESNext"],
        "target": "ES5",
        "module": "ESNext",
        "importsNotUsedAsValues": "preserve",
        "baseUrl": "./src/",
        "inlineSources": true,
        "isolatedModules": true,
        "jsx": "react",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["./src"]
}